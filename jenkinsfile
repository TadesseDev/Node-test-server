pipeline {
  agent any

  stages {
    stage('clone a repo'){
      steps{
        sh 'https://github.com/TadesseDev/Node-test-server.git'
      }
    }

    stage("install packages"){
      steps{
        sh 'npm install'
      }
    }

    stage("run test"){
      steps{
        sh 'npm test'
      }
    }

    stage('Build'){
      steps{
        sh 'echo "Build stage"'
      }
    }

  }

}
